@model Message
@{
    ViewData["Title"] = "Message " + Model.Id + " detail";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <div class="list-group list-group-flush">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Id Message: @Model.Id</h5>
                <h6 class="card-subtitle mb-2 text-muted">Create on: @Model.Created</h6>
                <p class="card-text">Text: @Model.Body</p>
            </div>
        </div>
        @Html.ActionLink("Home", "Index", "Messages", default, new { @class = "btn btn-outline-secondary w-25", style = "margin: 5px" })
        @Html.ActionLink("Delete", "Delete", "Messages", new { id = Model.Id }, new { @class = "btn btn-outline-secondary w-25", style = "margin: 5px" })
    </div>
</div>

